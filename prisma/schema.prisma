// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deliverymans {
  id            String     @id @default(uuid())
  username      String     @unique
  password      String

  delivery      Deliveries[]

  @@map("deliverymans")
}

model Clients {
  id            String    @id @default(uuid())
  username      String    @unique
  password      String

  delivery      Deliveries[]

  @@map("clients")
}

model Deliveries {
  id String @id @default(uuid())

  id_client        String
  id_deliveryman   String?

  item_name        String

  created_at       DateTime @default(now())
  end_at           DateTime?

  client           Clients      @relation(fields: [id_client], references: [id])
  delivery         Deliverymans? @relation(fields: [id_deliveryman], references: [id])

  @@map("deliveries")
}
